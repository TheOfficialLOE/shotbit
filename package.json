{
  "name": "shotbit",
  "version": "0.0.1",
  "description": "Extract movie shots/scenes easily.",
  "repository": {
    "type": "git",
    "url": "https://github.com/andersonjoseph/shotbit"
  },
  "devDependencies": {
    "@types/node": "20",
    "@typescript-eslint/eslint-plugin": "^5.59",
    "@typescript-eslint/parser": "^5.59",
    "eslint": "^8.38",
    "eslint-config-prettier": "^8.8",
    "prettier": "^2.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.2",
    "typescript": "^5.0"
  },
  "scripts": {
    "clean": "rimraf ./build ./packages/cli/build ./packages/core/build",
    "build": "pnpm clean && tsc --build tsconfig.json",
    "build:watch": "pnpm clean && tsc --build tsconfig.json -w",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write .",
    "test": "node --loader ts-node/esm --test ./packages/**/test/**/*.test.ts",
    "cli": "pnpm build && pnpm node ./packages/cli/build/index.js"
  },
  "author": "Anderson Joseph <andersonjoseph@mailfence.com>",
  "license": "Unlicense"
}
